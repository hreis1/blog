<%= render "errors", post: @post %>

<%= form_with model: @post do |f| %>
  <div>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div>
    <%= f.label :tags %><br />
    <%= f.text_field :tags, value: @post.tags.pluck(:name).join(', '), placeholder: 'tag1, tag2, tag3' %>
  </div>
  <%= f.submit t('posts.post_btn') %>
<% end %>
