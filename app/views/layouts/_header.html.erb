<header>
  <nav class="navbar">
    <h1><%= link_to 'Blog', root_path %></h1>
    <div class="nav-links">
      <% if I18n.locale == :en %>        
        <%= link_to request.params.merge( locale: 'pt-BR', only_path: true ) do %>
          <img width="30" height="30" src="https://img.icons8.com/fluency/48/usa-circular.png" alt="usa-circular"/>
        <% end %>
      <% else %>
        <%= link_to request.params.merge( locale: 'en', only_path: true ) do %>
          <img width="30" height="30" src="https://img.icons8.com/fluency/48/brazil-circular.png" alt="brazil-circular"/>
        <% end %>
      <% end %>
      <% if user_signed_in? %>
        <%= link_to t('create_post'), new_post_path %>
        <%= link_to current_user.name.split.first, user_path(current_user) %>
        <%= button_to t('log_out'), destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to t('sign_in'), new_user_session_path %>
        <%= button_to t('sign_up'), new_user_registration_path, method: :get %>
      <% end %>
    </div>
  </nav>
</header>
